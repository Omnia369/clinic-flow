# Database
DATABASE_URL="file:./clinic-flow.db"

# Admin Access
ADMIN_ACCESS_KEY="your-secret-admin-key"

# Payment Providers
# Wise (for payouts)
WISE_API_KEY="your-wise-api-key"
WISE_SANDBOX="true"

# Solana Pay
SOLANA_NETWORK="devnet"
SOLANA_PAY_MERCHANT_WALLET="your-merchant-wallet-address"

# Paddle Classic
PADDLE_VENDOR_AUTH_CODE="your-paddle-vendor-auth-code"
PADDLE_PUBLIC_KEY="your-paddle-public-key"

# PayPal (optional - signature verification)
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-paypal-webhook-id"

# Analytics (optional)
GA4_MEASUREMENT_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# Email (optional - for fulfillment)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="your-from-email@example.com"

# Application
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
